root = true

[**]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.txt]
indent_style = tab
indent_size = 8

[*.{bat,sh,php,md}]
indent_style = space
indent_size = 2

[**.py]
indent_style = space
indent_size = 4

[doc/**.txt]
indent_style = space
indent_size = 4
